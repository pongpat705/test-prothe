apiVersion: apps/v1
kind: Deployment
metadata:
  name: prometheus-poc-deployment
  labels:
    app: prometheus-poc-deployment-label
spec:
  replicas: 1
  selector:
    matchLabels:
      app: prometheus-poc-deployment
  template:
    metadata:
      labels:
        app: prometheus-poc-deployment
    spec:
      containers:
        - name: prometheus-poc-deployment
          image: registry.digitalocean.com/prior-container/prometheus:poc
          imagePullPolicy: Always
          ports:
          - containerPort: 9090
---
apiVersion: v1
kind: Service
metadata:
  name: prometheus-poc-service
  labels:
    app: prometheus-poc-service-label
spec:
  type: ClusterIP
  ports:
  - name: http
    port: 8080
    targetPort: 9090
  selector:
    app: prometheus-poc-deployment